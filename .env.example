# Environment Configuration Template
# Copy this file to .env and fill in your values

# Project
PROJECT_NAME=StepReaderCNN
ENVIRONMENT=development  # development, production

# Paths
DATA_DIR=./data
MODELS_DIR=./models
OUTPUTS_DIR=./outputs

# API
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# GUI
GUI_PORT=8501

# Database
DB_TYPE=sqlite
DB_PATH=./data/stepreader.db

# Optional: PostgreSQL
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=stepreader
# DB_USER=postgres
# DB_PASSWORD=your_password

# Optional: Weights & Biases
# WANDB_API_KEY=your_wandb_api_key
# WANDB_PROJECT=stepreader-cnn
# WANDB_ENTITY=your_entity

# Hardware
CUDA_VISIBLE_DEVICES=0

# Logging
LOG_LEVEL=INFO
